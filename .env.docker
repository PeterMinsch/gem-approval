# Docker Environment Configuration
# Copy this to .env and fill in your actual values

# Facebook Configuration
POST_URL=https://www.facebook.com/groups/5440421919361046
FACEBOOK_USERNAME=your_email@gmail.com
FACEBOOK_PASSWORD=your_password

# API Keys
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
OPENAI_MODEL=gpt-4o-mini

# Facebook Selectors
COMMENT_BOX_XPATH=//div[@contenteditable="true" and contains(@aria-placeholder, "Write a public comment")]

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# CORS Configuration (automatically set in docker-compose)  
CORS_ORIGINS=http://localhost,http://localhost:80,http://frontend

# Database (SQLite file will be persisted via volume)
DATABASE_PATH=/app/bot_data.db

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=5

# Chrome Configuration (for headless mode)
CHROME_BIN=/usr/bin/google-chrome
DISPLAY=:99